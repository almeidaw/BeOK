<resources xmlns:app="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="TherapyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@drawable/bg_terapia</item>
    </style>


    <style name="MyTheme" parent="android:Theme.Holo">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textColorHint">@color/cinzinha</item>
        <item name="android:buttonStyle">@style/myButton</item>
        <item name="android:editTextStyle">@style/MyEditText</item>
        <item name="android:spinnerStyle">@style/MySpinner</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:checkboxStyle">@style/MyCheckBox</item>
    </style>

    <style name="myButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/button_txt_size</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/question_txt_size</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="MySpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:hint">escolha</item>
    </style>

    <style name="MyActionBar" parent="Base.Widget.AppCompat.ActionBar">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyCheckBox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/answer_txt_size</item>
    </style>

<!--    <style name="SignUpTheme" parent="@style/MyTheme">
        <item name="android:background">@drawable/bg_registro</item>
    </style>
-->
</resources>