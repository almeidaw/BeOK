<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="beok.beok.Tela4"
    android:theme="@style/MyTheme"
    android:background="@drawable/bg_registro"
    android:gravity="center_horizontal"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:text="Contatos para emergência"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtcontatos"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="@dimen/tamanho_perguntas"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:text="Contato 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/txtcontato1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtxtcontato1"
            android:hint="Número do contato"
            />

        <Button
            android:text="Adicionar de Contatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btcontato1"
            android:onClick="selecionarContato1"
            android:background="@drawable/bordered_button_shape"/>

        <EditText
            android:text="Contato 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/txtcontato2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtxtcontato2"
            android:hint="Número do contato"
            />

        <Button
            android:text="Adicionar de Contatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btcontato2"
            android:onClick="selecionarContato2"
            android:background="@drawable/bordered_button_shape"/>

        <EditText
            android:text="Contato 3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/txtcontato3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtxtcontato3"
            android:hint="Número do contato"
            />

        <Button
            android:text="Adicionar de Contatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btcontato3"
            android:onClick="selecionarContato3"
            android:background="@drawable/bordered_button_shape"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="Finalizar o cadastro"
            android:id="@+id/btfimcadastro"
            android:onClick="FinalizarCadastro"
            android:background="@drawable/bordered_button_shape"/>

    </LinearLayout>

</ScrollView>
</RelativeLayout>
