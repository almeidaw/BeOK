<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="beok.beok.Atividade2">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="VIDEO"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="100dp"
        android:background="@drawable/borda" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtpergunta"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Verdade!"
        android:id="@+id/btverdade"
        android:onClick="botaoVerdade"
        android:background="@color/branco"
        android:layout_below="@+id/txtpergunta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Mito!"
        android:id="@+id/btmito"
        android:onClick="botaoMito"
        android:background="@color/branco"
        android:layout_below="@+id/txtpergunta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btverdade">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:id="@+id/btok"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="botaoOk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtexplicacao"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>


</RelativeLayout>
