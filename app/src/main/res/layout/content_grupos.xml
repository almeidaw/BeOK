<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_informacoes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="beok.beok.Informacoes"
    android:background="@drawable/bg_inspiracao">

    <include layout="@layout/content_main" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btmenu"
            android:background="@drawable/menu"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/btpanico"
            android:background="@drawable/panico"
            android:layout_marginRight="7dp"/>



        <TextView
            android:text="BeOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="22dp"
            android:textColor="@color/branco"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btmenu"
            android:layout_toEndOf="@+id/btmenu" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:layout_weight="1"
            android:text="Zona na cidade"
            android:textColor="@color/branco"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:layout_weight="1"
            android:onClick="zs"
            android:text="Zona sul"
            android:background="@drawable/bordered_button_shape"
            android:textColor="@color/branco"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:onClick="zn"
            android:text="Zona Norte"
            android:background="@drawable/bordered_button_shape"
            android:textColor="@color/branco"
            android:textSize="16sp"
            />


        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_weight="1"
            android:onClick="zl"
            android:text="Zona Leste"
            android:background="@drawable/bordered_button_shape"
            android:textColor="@color/branco"
            android:textSize="16sp"
            />


        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:onClick="zo"
            android:text="Zona Oeste"
            android:background="@drawable/bordered_button_shape"
            android:textColor="@color/branco"
            android:textSize="16sp"
            />


        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_weight="1"
            android:onClick="zc"
            android:text="Zona Central"
            android:background="@drawable/bordered_button_shape"
            android:textColor="@color/branco"
            android:textSize="16sp"
            />

    </LinearLayout>

</RelativeLayout>
