<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="beok.beok.Diary3Cocaine">

    <ViewSwitcher
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewSwitcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qual quantidade você usou?"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spcocainaqtd"
                android:entries="@array/gramas"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Próximo"
                android:id="@+id/btcocainaprox1"
                android:onClick="botaoProximo1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ViewSwitcher
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewSwitcher2" >

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Em que lugar você usou cocaina? (Opcional)"
                        android:id="@+id/textView"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pular pergunta"
                        android:id="@+id/btpularpergunta"
                        android:onClick="pularPergunta"
                        android:layout_below="@+id/textView"
                        android:layout_centerHorizontal="true" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/btpularpergunta"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@+id/btalcoolprox2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="MAPA AQUI"
                            android:textSize="50dp"
                            android:textAlignment="center"/>

                    </FrameLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Próximo"
                        android:id="@+id/btcocainaprox2"
                        android:onClick="botaoProximo2"
                        android:visibility="invisible"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ViewSwitcher
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/viewSwitcher3" >

                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView2"
                                android:text="Com quem você usou?"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="50dp" />

                            <Button
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Amigos"
                                android:id="@+id/btamigos"
                                android:onClick="usouComAmigos"
                                android:layout_below="@+id/textView2"
                                android:layout_alignLeft="@+id/btparceiro"
                                android:layout_alignStart="@+id/btparceiro"
                                android:layout_marginTop="50dp" />

                            <Button
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Parceiro"
                                android:id="@+id/btparceiro"
                                android:onClick="usouComParceiro"
                                android:layout_below="@+id/btamigos"
                                android:layout_centerHorizontal="true" />

                            <Button
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Familiares"
                                android:id="@+id/btfamiliares"
                                android:onClick="usouComFamiliares"
                                android:layout_below="@+id/btparceiro"
                                android:layout_centerHorizontal="true" />

                            <Button
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Sozinho"
                                android:id="@+id/btsozinho"
                                android:onClick="usouSozinho"
                                android:layout_below="@+id/btfamiliares"
                                android:layout_centerHorizontal="true" />

                            <Button
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Desconhecidos"
                                android:onClick="usouComDesconhecidos"
                                android:id="@+id/btdesconhecidos"
                                android:layout_below="@+id/btsozinho"
                                android:layout_centerHorizontal="true" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <ViewSwitcher
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/viewSwitcher4" >

                                <RelativeLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Quando você usou?"
                                        android:id="@+id/textView3"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="50dp" />

                                    <CalendarView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/calendarView"
                                        android:layout_below="@+id/textView3"
                                        android:layout_centerHorizontal="true"
                                        android:layout_above="@+id/btalcoolprox4" />

                                    <Button
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Próximo"
                                        android:id="@+id/btcocainaprox4"
                                        android:onClick="botaoProximo4"
                                        android:visibility="invisible"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentEnd="true" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" >

                                    <ViewSwitcher
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/viewSwitcher5" >

                                        <RelativeLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Por que você usou?"
                                                android:id="@+id/textView4"
                                                android:layout_alignParentTop="true"
                                                android:layout_centerHorizontal="true"
                                                android:layout_marginTop="50dp" />

                                            <Button
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Senti-me sozinho"
                                                android:id="@+id/btsentiso"
                                                android:onClick="motivoSentiSo"
                                                android:layout_marginTop="50dp"
                                                android:layout_below="@+id/textView4"
                                                android:layout_alignLeft="@+id/btestavafesta"
                                                android:layout_alignStart="@+id/btestavafesta" />

                                            <Button
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Estava numa festa"
                                                android:id="@+id/btestavafesta"
                                                android:onClick="motivoEstavaFesta"
                                                android:layout_below="@+id/btsentiso"
                                                android:layout_centerHorizontal="true" />

                                            <Button
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Meus amigos estavam usando"
                                                android:id="@+id/btamigosusando"
                                                android:onClick="motivoAmigosUsando"
                                                android:layout_below="@+id/btestavafesta"
                                                android:layout_centerHorizontal="true" />

                                            <Button
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Briguei com alguém"
                                                android:id="@+id/btbriguei"
                                                android:onClick="motivoBriguei"
                                                android:layout_below="@+id/btamigosusando"
                                                android:layout_centerHorizontal="true" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Conte mais sobre como foi"
                                                android:id="@+id/textView5"
                                                android:layout_alignParentTop="true"
                                                android:layout_centerHorizontal="true" />

                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="200dp"
                                                android:layout_below="@+id/textView5">

                                                <EditText
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/edtxt" />

                                            </FrameLayout>

                                            <Button
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Próximo"
                                                android:id="@+id/btcocainaprox6"
                                                android:onClick="botaoProximo6"
                                                android:layout_alignParentBottom="true"
                                                android:layout_alignParentRight="true"
                                                android:layout_alignParentEnd="true" />

                                        </RelativeLayout>
                                    </ViewSwitcher>
                                </RelativeLayout>
                            </ViewSwitcher>
                        </RelativeLayout>
                    </ViewSwitcher>
                </RelativeLayout>
            </ViewSwitcher>
        </RelativeLayout>
    </ViewSwitcher>

</RelativeLayout>
