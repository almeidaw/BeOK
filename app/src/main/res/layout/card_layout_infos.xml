<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_layout_infos"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/nome_grupo"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Grupo A"
            android:layout_alignParentTop="true"/>

        <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/site_grupo"
        android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:text="Site: adhashdhahsdhsdah"
        android:layout_below="@id/nome_grupo"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/telefone_grupo"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="Telefone: +55 11 238823823"
            android:layout_below="@id/site_grupo"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/des_grupo_leg"
            android:textSize="15sp"
            android:text="Sobre"

            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_below="@id/telefone_grupo"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/descricao_grupo"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/des_grupo_leg"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>